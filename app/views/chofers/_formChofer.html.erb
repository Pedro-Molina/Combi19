<%= form_for(@chofer, url: admin_chofers_path(@chofer), html: {method: "post"}) do |f| %>

<div class="field">
<%= f.label :nombre %>
<%= f.text_field :nombre %>
</div>

<div class="field">
<%= f.label :apellido %>
<%= f.text_field :apellido %>
</div>

<div class="field">
<%= f.label :email %>
<%= f.email_field :email %>
</div>

<div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password" %>
</div>


<div class="field">
<%= f.label :dni %>
<%= f.text_field :dni %>
</div>

<div class="field">
<%= f.label :telefono %>
<%= f.number_field :telefono %>
</div>

<%= f.submit 'Guardar' %>
<% end %>
